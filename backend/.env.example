# Database
DATABASE_URL=sqlite+aiosqlite:///./projectohara.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/projectohara

# Session Secret (generate with: openssl rand -hex 32)
SECRET_KEY=change-this-to-a-secure-random-string

# Frontend URL (for CORS and OAuth redirects)
FRONTEND_URL=http://localhost:5173

# OAuth - Google (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# OAuth - GitHub (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Optional: Default LLM settings
DEFAULT_PROVIDER=openrouter
DEFAULT_WORK_MODEL=google/gemini-2.5-flash-lite-preview-09-2025
DEFAULT_FINAL_MODEL=anthropic/claude-sonnet-4.5
